{% extends '_layouts/main' %}
{% block main %}
    <main class="text-center mt-5 container">
        <form method="post" accept-charset="UTF-8">
          {{ csrfInput() }}
          {{ actionInput('users/login') }}

          <img class="mb-4 img-fluid" src="/images/simg/logo.svg" alt="Logo">
          <h1 class="h3 mb-5 fw-normal">Login</h1>

          <div class="form-group">
              {{ input('text', 'loginName', craft.app.user.rememberedUsername, {
                id: 'loginName',
                autocomplete: 'username',
                placeholder: 'Gebruikersnaam of Email',
                class: 'form-control'
              }) }}
          </div>

          <div class="form-group">
              {{ input('password', 'password', null, {
                id: 'password',
                placeholder: 'Wachtwoord',
                class: 'form-control mt-3'
              }) }}
              <button style="float: right; margin-top: -40px;" id="showitbtn" class="btn" type="button">
              <i id="eyes" class="fas fa-eye"></i>
              </button>
          </div>
          <label>
            {{ input('checkbox', 'rememberMe', '1') }}
            Hou me ingelogd
          </label>

          <button class="mt-3 btn btn-lg btn-primary" type="submit">Login</button>

          {% if errorMessage is defined %}
            <p>{{ errorMessage }}</p>
          {% endif %}
        </form>

        <p><a href="{{ url('reset-password') }}">Wachtwoord Vergeten?</a></p>
    </main>
{{ parent() }}
<script defer src="/js/toggle.js">

</script>
{% endblock %}
